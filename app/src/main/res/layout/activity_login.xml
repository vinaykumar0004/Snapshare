<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center"
    android:background="@drawable/gradient_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="16dp">

        <!-- Logo Section -->
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/snapshare3_jpg"
        android:layout_gravity="center"
        android:contentDescription="App Logo" />

        <!-- Title Section with Two Colors -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="16dp">

            <!-- First part of SnapShare -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Snap"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="@android:color/holo_blue_dark" /> <!-- First color for 'Snap' -->

            <!-- Second part of SnapShare -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Share"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="@android:color/holo_green_dark" /> <!-- Second color for 'Share' -->
        </LinearLayout>

        <!-- Subtitle Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Photo/Video Sharing"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray"
            android:layout_marginTop="4dp"
            android:gravity="center"/>

    </LinearLayout>

    <!-- Email Input with border -->
    <EditText
        android:id="@+id/etEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email"
        android:textColor="#000000"
        android:textStyle="bold"
        android:padding="16dp"
        android:background="@drawable/border_edittext"
        android:textSize="16sp"
        android:drawablePadding="10dp"
        android:inputType="textEmailAddress"/>

    <!-- Password Input with Toggle Button -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <EditText
            android:id="@+id/etPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:textColor="#000000"
            android:textStyle="bold"
            android:padding="16dp"
            android:background="@drawable/border_edittext"
            android:textSize="16sp"
            android:inputType="textPassword" />

        <ImageView
            android:id="@+id/ivTogglePasswordVisibility"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_visibility_off"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="8dp"
            android:padding="8dp"
            android:clickable="true"
            android:focusable="false" />
    </RelativeLayout>

    <!-- Role Selection Spinner -->
    <Spinner
        android:id="@+id/roleSpinner"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/border_edittext"
        android:padding="12dp"
        android:popupBackground="@drawable/border_edittext"
        android:textStyle="bold" />

    <!-- Specific Code Label -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Specific Code"
        android:textSize="16sp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:gravity="center"/>

    <!-- Specific Code Columns -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="10dp">

        <!-- Specific Code Digit 1 -->
        <EditText
            android:id="@+id/etDigit1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/border_edittext"
            android:inputType="number"
            android:textColor="#000000"
            android:gravity="center"
            android:maxLength="1"
            android:textSize="18sp"/>

        <!-- Specific Code Digit 2 -->
        <EditText
            android:id="@+id/etDigit2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/border_edittext"
            android:inputType="number"
            android:gravity="center"
            android:textColor="#000000"
            android:maxLength="1"
            android:layout_marginStart="8dp"
            android:textSize="18sp"/>

        <!-- Specific Code Digit 3 -->
        <EditText
            android:id="@+id/etDigit3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/border_edittext"
            android:inputType="number"
            android:gravity="center"
            android:maxLength="1"
            android:textColor="#000000"
            android:layout_marginStart="8dp"
            android:textSize="18sp"/>

        <!-- Specific Code Digit 4 -->
        <EditText
            android:id="@+id/etDigit4"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/border_edittext"
            android:inputType="number"
            android:gravity="center"
            android:textColor="#000000"
            android:maxLength="1"
            android:layout_marginStart="8dp"
            android:textSize="18sp"/>

        <!-- Specific Code Digit 5 -->
        <EditText
            android:id="@+id/etDigit5"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/border_edittext"
            android:inputType="number"
            android:gravity="center"
            android:textColor="#000000"
            android:maxLength="1"
            android:layout_marginStart="8dp"
            android:textSize="18sp"/>
    </LinearLayout>

    <!-- Forgot Password and Remember Me Section -->
    <!-- Forgot Password and Remember Me Section -->


    <!-- Login Button -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:gravity="bottom"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Forgot Password? Reset"
            android:textColor="@android:color/holo_green_dark"
            android:textSize="14sp" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:textColor="#000000"
            android:text="Remember me"
            android:layout_marginStart="60dp"/>
    </LinearLayout>

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="SIGN IN"
        android:textColor="@android:color/white"
        android:backgroundTint="@color/purple_primary"
        android:textStyle="bold"
        android:layout_marginTop="2dp"
        android:layout_gravity="center" />

    <!-- Register Button -->
    <!-- Sign Up Text Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Don't have an account?"
            android:textColor="@android:color/darker_gray"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/btnRegister"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign Up"
            android:textColor="@android:color/holo_green_dark"
            android:textStyle="bold"
            android:layout_marginStart="8dp"
            android:textSize="14sp"/>
    </LinearLayout>

</LinearLayout>
